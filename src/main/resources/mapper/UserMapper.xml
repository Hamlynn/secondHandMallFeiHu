    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.edu.cqu.entity.User">
        <id column="u_Id" property="uId" />
        <result column="u_Name" property="uName" />
        <result column="u_Password" property="uPassword" />
        <result column="u_PhoneNum" property="uPhonenum" />
        <result column="u_Email" property="uEmail" />
        <result column="u_Head" property="uHead" />
        <result column="u_School" property="uSchool" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        u_Id, u_Name, u_Password, u_PhoneNum, u_Email, u_Head, u_School
    </sql>

</mapper>
